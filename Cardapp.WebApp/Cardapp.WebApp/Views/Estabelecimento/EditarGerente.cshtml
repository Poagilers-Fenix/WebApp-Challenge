@model Gerente

@{
    ViewData["Title"] = "Editar Gerente";
    Layout = "_LayoutNavSide";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/css/master.css" rel="stylesheet" />
<link href="~/css/form-card.css" rel="stylesheet" />

<div style="display: flex; flex-direction: column; justify-content: center; margin-left: 8%;">
    <h1 style="display: flex; justify-content: center;" class="my-5">Edite suas informações</h1>
    <div class="card cardStyle mx-auto" style="width: 70%; padding: 3%">
        <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
        <div class="d-flex justify-content-center">
            <a asp-action="EditarSenha" class="btn btn-outline-danger mb-4">Editar senha</a>
        </div>
        <form asp-action="EditarGerente">
            <input asp-for="CodigoGerente" type="hidden" />
            <input asp-for="Senha" type="hidden" />
            <partial name="_FormCreateUpdateGerente" />

            <div class="d-flex">
                <div class="form-row justify-content-center mx-auto my-3 col-6" style="width: 96%;">
                    <label for="id-senha">Senha atual</label>
                    <input for="id-senha" name="senhaAtual" class="form-control" autocomplete="off">
                </div>
            </div>

            <div class="form-row formRowStyleButton">
                <a asp-action="Index" class="btn btn-danger px-5">Voltar</a>
                <input type="submit" value="Salvar alterações" class="btn btn-info ml-3 px-5" />
            </div>
        </form>
    </div>
</div>
