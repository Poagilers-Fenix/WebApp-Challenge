@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-br" style="background-color: #EAE3EA">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] @(HttpContextAccessor.HttpContext.Session.GetString("NomeEstabelecimento") != null ?
        " - " + HttpContextAccessor.HttpContext.Session.GetString("NomeEstabelecimento") : "")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/index-about.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>
</head>
<body style="background-color: #EAE3EA">
    <div class="d-flex flex-column justify-content-between align-items-center small-left-content fixed-top">
        <a class="mt-3" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/img/logo.svg" width="100" />
        </a>
        <div class="mb-3 d-flex flex-column align-items-center">
            <button onclick="goBack()" class="mb-3 btn d-flex justify-content-center">
                <img src="/img/next.svg" style="width: 65%; -moz-transform: scaleX(-1); -o-transform: scaleX(-1); -webkit-transform: scaleX(-1); transform: scaleX(-1);" />
            </button>
        </div>
    </div>
    <main role="main" style="background-color: #EAE3EA">
        <div class="mr-5 mt-5 d-flex justify-content-end">
            <a class="btn btn-warning btn-lg menu-button" style="box-shadow: 6px 5px 10px #333;" 
               role="button" asp-action="Index" asp-controller="Estabelecimento">
                Gerenciar conta
            </a>
            <a class="btn btn-danger btn-lg menu-button ml-2" role="button" style="box-shadow: 6px 6px 10px #333;" asp-action="Logout" asp-controller="Home">
                <span class="material-icons text-light">logout</span>
            </a>
        </div>
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    function goBack() {
        window.history.back();
    }
</script>
