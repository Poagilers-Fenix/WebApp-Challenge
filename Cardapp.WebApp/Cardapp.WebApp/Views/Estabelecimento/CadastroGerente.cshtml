@model Gerente

@{
    ViewData["Title"] = "Cadastro de gerente";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Wendy+One&display=swap" rel="stylesheet">

<link href="~/css/master.css" rel="stylesheet" />
<link href="~/css/form-card.css" rel="stylesheet" />
<link href="~/css/index-about.css" rel="stylesheet" />

<div class="page-content">
    <partial name="_LeftContent" />
    <div class="right-content" style="display: flex; flex-direction: column; justify-content: center; margin-left: 8%;">
        <h1 style="display: flex; justify-content: center;" class="my-5 text-white">Cadastre um gerente</h1>
        <div class="card cardStyle mx-auto" style="width: 70%">
            <form asp-action="CadastroGerente">
                <partial name="_FormCreateUpdateGerente" />

                <div class="form-row justify-content-center mx-auto my-3" style="width: 96%;">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" class="form-control">
                    <span asp-validation-for="Senha" class="text-danger mb-3" style="text-align: center"></span>
                </div>

                <div class="form-row formRowStyleButton">
                    <a asp-action="CadastroEstabelecimento" asp-controller="Estabelecimento" class="btn btn-danger px-5">Voltar</a>
                    <input type="submit" value="Salvar" class="btn btn-info ml-3 px-5" />
                </div>
            </form>
        </div>
    </div>
</div>