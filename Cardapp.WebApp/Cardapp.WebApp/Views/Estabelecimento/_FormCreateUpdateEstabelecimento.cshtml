@model Estabelecimento

<div class="form-row d-flex flex-row justify-content-around">
    <div style="width: 45%;">
        <div class="d-flex justify-content-center">
            <label asp-for="RazaoSocial"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="RazaoSocial" class="form-control mb-2">
            <span asp-validation-for="RazaoSocial" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
    <div style="width: 45%;">
        <div class="d-flex justify-content-center">
            <label asp-for="NomeFantasia"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="NomeFantasia" class="form-control mb-2">
            <span asp-validation-for="NomeFantasia" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
</div>
<div class="form-row d-flex flex-row justify-content-around">
    <div style="width: 45%;">
        <div class="d-flex justify-content-center">
            <label asp-for="Cnpj"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Cnpj" class="form-control mb-2">
            <span asp-validation-for="Cnpj" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
    <div style="width: 45%;">
        <div class="d-flex justify-content-center">
            <label asp-for="Telefone"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Telefone" class="form-control mb-2">
            <span asp-validation-for="Telefone" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
</div>

<div class="form-row justify-content-center mx-auto my-3" style="width: 96%;">
    <label asp-for="Endereco" class="d-flex justify-content-center"></label>
    <input asp-for="Endereco" class="form-control mb-2">
    <span asp-validation-for="Endereco" class="text-danger mb-2" style="text-align: center"></span>
</div>
<div class="form-row justify-content-center mx-auto mb-2" style="width: 96%;">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control mb-2">
    <span asp-validation-for="Email" class="text-danger mb-2" style="text-align: center"></span>
</div>