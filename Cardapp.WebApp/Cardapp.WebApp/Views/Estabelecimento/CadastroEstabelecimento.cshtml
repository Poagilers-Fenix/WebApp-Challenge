@model Estabelecimento
@{ ViewData["Title"] = "Cadastro de restaurante";
    Layout = "_LayoutNavSide";}



<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/css/master.css" rel="stylesheet" />
<link href="~/css/form-card.css" rel="stylesheet" />


<div style="display: flex; flex-direction: column; justify-content: center; margin-left: 8%;">
    <h1 style="display: flex; justify-content: center;" class="my-5 text-white">Cadastre um restaurante</h1>
    <div class="card cardStyle mx-auto" style="width: 70%">
        <form asp-action="CadastroEstabelecimento">
            <div class="form-row">
                <label asp-for="RazaoSocial"></label>
                <input  required asp-for="RazaoSocial" class="form-control">
                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label asp-for="NomeFantasia"></label>
                <input required asp-for="NomeFantasia" class="form-control">
                <span asp-validation-for="NomeFantasia" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label asp-for="Cnpj"></label>
                <input required asp-for="Cnpj" class="form-control">
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label asp-for="Endereco"></label>
                <input required asp-for="Endereco" class="form-control">
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label asp-for="Telefone"></label>
                <input required asp-for="Telefone" class="form-control">
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-row">
                <label asp-for="Email"></label>
                <input required asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-row formRowStyleButton">
                <input type="submit" value="Salvar" class="btn btn-info mr-3 px-5" />
                <a asp-action="Index" asp-controller="About" class="btn btn-outline-danger px-5">Cancelar</a>
            </div>
        </form>
    </div>
</div>

