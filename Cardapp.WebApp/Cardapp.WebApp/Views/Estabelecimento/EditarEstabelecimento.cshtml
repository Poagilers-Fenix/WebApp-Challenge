@model Estabelecimento

@{
    ViewData["Title"] = "Editar Estabelecimento";
    Layout = "_LayoutNavSide";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/css/master.css" rel="stylesheet" />
<link href="~/css/form-card.css" rel="stylesheet" />


<div style="display: flex; flex-direction: column; justify-content: center; margin-left: 8%;">
    <h1 style="display: flex; justify-content: center;" class="my-5">Edite as informações do estabelecimento</h1>
    <div class="card cardStyle mx-auto" style="width: 70%; padding: 3%; box-shadow: 6px 6px 10px #333;">
        <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
        <form asp-action="EditarEstabelecimento">
            <input asp-for="CodigoEstabelecimento" type="hidden" />
            <partial name="_FormCreateUpdateEstabelecimento" />

            <div class="form-row formRowStyleButton">
                <a asp-action="Index" class="btn btn-danger px-5">Voltar</a>
                <input type="submit" value="Salvar alterações" class="btn btn-info ml-3 px-5" />
            </div>
        </form>
    </div>
</div>