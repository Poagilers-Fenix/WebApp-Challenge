@model Estabelecimento
@{ ViewData["Title"] = "Cadastro de restaurante";
    Layout = "_LayoutNavSide";}



<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/css/master.css" rel="stylesheet" />

<div style="display: flex; flex-direction: column; justify-content: center; margin-left: 8%;">
    <h1 style="display: flex; justify-content: center;" class="my-5 text-white">Cadastre um restaurante</h1>
    <div class="card cardStyle mx-auto" style="width: 70%">
        <form asp-action="Cadastrar">
            <div class="form-row">
                <label asp-for="RazaoSocial"></label>
                <input asp-for="RazaoSocial" class="form-control">
            </div>
            <div class="form-row">
                <label asp-for="NomeFantasia"></label>
                <input asp-for="NomeFantasia" class="form-control">
            </div>
            <div class="form-row">
                <label asp-for="Cnpj"></label>
                <input asp-for="Cnpj" class="form-control">
            </div>
            <div class="form-row">
                <label asp-for="Endereco"></label>
                <input asp-for="Endereco" class="form-control">
            </div>
            <div class="form-row">
                <label asp-for="Telefone"></label>
                <input asp-for="Telefone" class="form-control">
            </div>
            <div class="form-row">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-row formRowStyleButton">
                <input type="submit" value="Salvar" class="btn btn-info mr-3 px-5" />
                <a asp-action="Index" class="btn btn-outline-danger px-5">Cancelar</a>
            </div>
        </form>
    </div>
</div>



<style>

    html {
        background-color: #4196A6;
    }

    .cardStyle {
        width: 90%;
        border: 2px solid #800;
        height: 80%;
        padding: 2%;
    }

    .formRowStyleButton {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-top: 3vh;
    }
</style>