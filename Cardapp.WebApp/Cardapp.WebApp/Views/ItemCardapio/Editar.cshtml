@model Item
@{
    ViewData["Title"] = "Edite o item do cardápio";
    Layout = "_LayoutNavSide";

}

<link href="~/css/form-card.css" rel="stylesheet" />

<partial name="_BotoesSessao" />


<div style="display: flex; flex-direction: column; justify-content: center; margin-left: 8%;">
    @if (@TempData["Sucesso"] != null)
    {
        <Feedback Texto="@TempData["Sucesso"]" is-error="false"></Feedback>
    }
    else
    {
        <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
    }
    <h2 style="display: flex; justify-content: center;" class="my-5">Edite o item escolhido</h2>
    <div class="card cardStyle mx-auto" style="width: 70%; padding: 3%">
        <form asp-action="Editar">
            <input type="hidden" asp-for="@Model.CodigoItem" />
            <partial name="_FormCreateUpdate" />
            <row>
                <div class="form-row formRowStyleButton">
                    <a asp-action="Index" class="btn btn-danger px-5">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-info mx-3 px-5" />
                </div>
            </row>
        </form>
    </div>
</div>
