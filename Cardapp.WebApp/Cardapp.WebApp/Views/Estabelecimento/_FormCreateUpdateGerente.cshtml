@model Gerente

<input asp-for="CodigoEstabelecimento" />
<div class="form-row d-flex flex-row justify-content-around">
    <div style="width: 45%;">
        <div class="d-flex justify-content-center">
            <label asp-for="NomeGerente"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="NomeGerente" class="form-control mb-2">
            <span asp-validation-for="NomeGerente" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
    <div style="width: 45%;">
        <div class="d-flex justify-content-center">
            <label asp-for="Salario"></label>
        </div>
        <div class="d-flex flex-column">
            <input asp-for="Salario" pattern="(^[0-9]{0,5}[,][0-9]{2})" title="No formato: 999,00 | 1000,00 | 10000,00" class="form-control mb-2">
            <span asp-validation-for="Salario" class="text-danger mb-3" style="text-align: center"></span>
        </div>
    </div>
</div>

<div class="form-row justify-content-center mx-auto my-3" style="width: 96%;">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control">
    <span asp-validation-for="Email" class="text-danger mb-3" style="text-align: center"></span>
</div>
<div class="form-row justify-content-center mx-auto my-3" style="width: 96%;">
    <label asp-for="Endereco"></label>
    <input asp-for="Endereco" class="form-control">
    <span asp-validation-for="Endereco" class="text-danger mb-3" style="text-align: center"></span>
</div>