@model Email
@{
    ViewData["Title"] = "Contato";
    Layout = "_LayoutNavSide";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/css/master.css" rel="stylesheet" />
<link href="~/css/buttons.css" rel="stylesheet" />

<div class="right-content" style="display: flex; flex-direction: column; margin-right: 10%; width: 70%">
    <div class="card mt-5 mb-5 border-danger" style="border-radius: 15px">
        @if (@TempData["Sucesso"] != null)
        {
            <Feedback Texto="@TempData["Sucesso"]" is-error="false"></Feedback>
        }
        else
        {
            <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
        }

        <div style="display: flex; flex-direction: column; align-items: center">
            <h3 class="mt-5 mb-4">Mande um e-mail para nós!</h3>

            <form asp-action="EnviaEmail" asp-controller="TesteEmail" style="width: 80%; min-height: 50vh">
                <div class="form-group">
                    <label asp-for="EmailResposta"></label>
                    <input asp-for="EmailResposta" class="form-control" />
                    <span asp-validation-for="EmailResposta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assunto"></label>
                    <input asp-for="Assunto" class="form-control" />
                    <span asp-validation-for="Assunto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mensagem"></label>
                    <textarea asp-for="Mensagem" class="form-control"></textarea>
                    <span asp-validation-for="Mensagem" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success mb-5">Enviar</button>
            </form>
        </div>
    </div>
</div>

