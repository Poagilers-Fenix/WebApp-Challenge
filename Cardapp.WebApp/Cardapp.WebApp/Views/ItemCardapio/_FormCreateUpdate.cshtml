@model Item

<row>
    <input asp-for="CodigoEstabelecimento" />
    <div class="form-row">
        <div class="col-4">
            <label asp-for="Nome" for="name">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" id="name">
            <span asp-validation-for="Nome" class="text-danger mb-3" style="text-align: center"></span>
        </div>
        <div class="col-4" style="display:flex; flex-direction: column; justify-content: end;">
            <div class="input-group" style="flex-direction: row;">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="valor">R$</span>
                </div>
                <input asp-for="Preco" pattern="(^[0-9]{0,5}[,][0-9]{2})" title="No formato: 999,00 | 1000,00 | 10000,00" class="form-control" aria-describedby="valor">
            </div>
            <div>
                <span asp-validation-for="Preco" class="text-danger mb-3" style="text-align: center"></span>
            </div>
        </div>
        <div class="col-4" style="display:flex; flex-direction: column; justify-content: end;">
            <div class="input-group" style="flex-direction: row;">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="valorCalorico">Kcal</span>
                </div>
                <input asp-for="ValCalorico" pattern="(^[0-9]{0,5})" title="No formato: 150, 300, 222" placeholder="Informe o valor calórico do item" class="form-control" aria-describedby="valor">
            </div>
            <div>
                <span asp-validation-for="ValCalorico" class="text-danger mb-3" style="text-align: center"></span>
            </div>
        </div>
    </div>
</row>

<row>
    <div class="form-group mt-3">
        <label asp-for="Descricao" for="descricao">Descrição do item</label>
        <textarea asp-for="Descricao" class="form-control" id="descricao" rows="4"></textarea>
        <span asp-validation-for="Descricao" class="text-danger mb-3" style="text-align: center"></span>
    </div>
</row>

<row>
    <div class="form-row formRowStyle">
        <div class="col-4">
            <label asp-for="Foto" for="foto">Link da foto do item</label>
            <input asp-for="Foto" type="text" class="form-control" id="foto">
            <span asp-validation-for="Foto" class="text-danger mb-3" style="text-align: center"></span>
        </div>
        <div class="col-4">
            <label asp-for="Categoria"></label>
            <select asp-items="@Html.GetEnumSelectList<CategoriaItem>()" asp-for="Categoria" class="form-control"></select>
        </div>
        <div class="col-4" style="display: flex; flex-direction: column; align-items: center;">
            <label class="form-check-label mb-3" asp-for="Destaque"></label>
            @foreach (var item in ViewBag.status)
            {
                <div class="form-group">
                    <input type="radio" asp-for="Destaque" value="@item"  checked="@(Model == null ? true : Model.Destaque == 'S' ? false : true )" />
                    <label asp-for="Destaque">
                        @(item == "S" ? "Sim" : "Não")
                    </label>
                </div>
            }
        </div>
    </div>
</row>