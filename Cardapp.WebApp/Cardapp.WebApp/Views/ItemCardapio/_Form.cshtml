<div class="card mx-auto" style="width: 80%; border: 2px solid #800; height: 80%">
    <row style="height: 5vh">
        <div class="btn-group w-100 h-100" role="group">
            <a class="btn btnNavAtual text-white"><span class="material-icons pr-2">star</span>Destaques</a>
            <a class="btn btnNav" asp-action="Index"><span class="material-icons pr-2">restaurant_menu</span>Pratos principais</a>
            <a class="btn btnNav" asp-action="Index"><span class="material-icons pr-2">local_bar</span>Bebidas</a>
            <a class="btn btnNav" asp-action="Index"><span class="material-icons pr-2">fastfood</span>Lanches</a>
            <a class="btn btnNav" asp-action="Index"><span class="material-icons pr-2">icecream</span>Sobremesas</a>
        </div>
    </row>
    <a asp-action="Cadastrar" class="btn btn-danger ml-3 my-3 py-2 px-2" style="width: 20%">Adicionar um novo item no cardápio</a>
    <row>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Foto</th>
                    <th scope="col">Nome do item</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Valor do item</th>
                    <th scope="col">Valor calórico</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.itens)
                {
                    <tr>
                        <td width="250px">
                            <img src="@(item.Foto == null  ? "https://raw.githubusercontent.com/Poagilers-Fenix/WebApp-Challenge/main/Imagens/no-image-found.png?token=AOXNWKVBRD3WDDJKASDBZT3BHUBDY" : @item.Foto)" style="width: 300px; height: 150px" class="img-thumbnail" alt="...">
                        </td>
                        <td class="align-middle">@item.Nome</td>
                        <td class="align-middle" width="480px">@item.Descricao</td>
                        <td class="align-middle" width="200px">R$ @item.Preco</td>
                        <td class="align-middle" width="200px">@(item.ValCalorico != 0 ? $"{@item.ValCalorico} Kcal" : "----------" )</td>
                        <td class="align-middle">
                            <form asp-action="Index">
                                <div style="display: flex; flex-direction: column; margin-right: 2vw;">
                                    <a class="mb-3 btn btn-info" asp-action="Editar" asp-route-id="@item.CodigoItem">Editar</a>
                                    <input type="submit" asp-route-id="@item.CodigoItem" class="btn btn-danger" value="Excluir" />
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </row>
</div>